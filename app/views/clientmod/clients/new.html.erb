  <h1>Add a new Client</h1>

<%= simple_form_for @client, url: clientmod_clients_path do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :clientname,
                        required: true,
                        autofocus: true%>
          </div>

          <div class="form-actions">
            <%= f.submit "Create a New Client" %>
          </div>
        <% end %>