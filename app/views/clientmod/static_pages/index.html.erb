<h1>clientMOD Homepage</h1>
<%= link_to "Add client", new_clientmod_client_path %>
-list clients
<br />
<br />

<div>
<ul id="list1">
</ul>
</div>

<script>

$(function show_link_list() {
  $.get("/clientmod/clients").success( function( data ) {
    $.each(data, function(index, client) {
                // Create anchor element. 
                var a = document.createElement('a');  
                var ulist = document.getElementById("list1");
                var newItem = document.createElement("li");

                a.textContent = client.clientname;
                a.setAttribute('href', '/clientmod/clients/' + client.id );
                newItem.appendChild(a);
                ulist.appendChild(newItem); 
    });
  });
});
</script>