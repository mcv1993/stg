<%= simple_form_for @user, url: usermod_users_path do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email,
                        required: true,
                        autofocus: true%>
            <%= f.input :password,
                        required: true%>
            <%= f.input :password_confirmation,
                        required: true%>
            
          </div>

          <div class="form-actions">
            <%= f.submit "Create a New Section" %>
          </div>
        <% end %>